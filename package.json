    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "inquirer": "^13.0.2",
    "mjml": "^4.17.1",
    "pagefind": "^1.4.0",
