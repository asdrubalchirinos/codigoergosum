---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Sidebar from '../../components/Sidebar.astro';
import { getCollection } from 'astro:content';
import { SITE_TITLE } from '../../consts';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const rawBase = import.meta.env.BASE_URL;
const base = rawBase === '/' ? '' : rawBase.replace(/\/$/, '');
---

<BaseLayout title={`Etiqueta: ${tag} - ${SITE_TITLE}`} description={`Posts etiquetados con ${tag}`}>
    <div class="container">
        <div class="content">
            <h1>Etiqueta: <span>#{tag}</span></h1>
            <ul class="post-list">
                {sortedPosts.map((post) => (
                    <li>
                        <a href={`${base}/blog/${post.slug}/`}>
                            <div class="post-content">
                                <h2 class="title">{post.data.title}</h2>
                                <p class="date">
                                    {post.data.pubDate.toLocaleDateString('es-ES', {
                                        year: 'numeric',
                                        month: 'short',
                                        day: 'numeric',
                                    })}
                                </p>
                                {post.data.subtitle && <p class="subtitle">{post.data.subtitle}</p>}
                            </div>
                            {post.data.heroImage && (
                                <div class="post-image">
                                    <img width={120} height={120} src={`${base}${post.data.heroImage}`} alt="" />
                                </div>
                            )}
                        </a>
                    </li>
                ))}
            </ul>
        </div>
        <aside>
            <Sidebar />
        </aside>
    </div>
</BaseLayout>

<style>
    .container {
        display: flex;
        gap: 2rem;
        margin-top: 2rem;
    }
    .content {
        flex: 2;
    }
    aside {
        flex: 1;
    }
    h1 span {
        color: rgb(var(--accent));
    }
    .post-list {
        list-style: none;
        padding: 0;
        margin-top: 2rem;
    }
    .post-list li {
        margin-bottom: 2rem;
    }
    .post-list a {
        text-decoration: none;
        color: inherit;
        display: flex;
        justify-content: space-between;
        gap: 1.5rem;
        align-items: flex-start;
    }
    .post-content {
        flex: 1;
    }
    .post-image img {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 8px;
        display: block;
    }
    .post-list .title {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        margin-top: 0;
    }
    .post-list .date {
        color: rgb(var(--gray));
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }
    .post-list .subtitle {
        color: rgb(var(--gray-dark));
        font-size: 1rem;
        margin: 0;
    }
    @media (max-width: 768px) {
        .container {
            flex-direction: column;
        }
    }
</style>
