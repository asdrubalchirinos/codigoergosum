---
import { type CollectionEntry, getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => {
    return import.meta.env.PROD
      ? data.draft !== true && data.pubDate <= new Date()
      : true;
  });
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props as CollectionEntry<"blog">;
const { Content } = await post.render();
const rawBase = import.meta.env.BASE_URL;
const base = rawBase === "/" ? "" : rawBase.replace(/\/$/, "");

const shareUrl = new URL(Astro.url.pathname, Astro.site);
const shareText = `Lee "${post.data.title}" en Código Ergo Sum`;
const encodedShareText = encodeURIComponent(shareText);
const encodedShareUrl = encodeURIComponent(shareUrl.toString());

// Excerpt / description fallback
let excerptSource = post.data.subtitle || "";
if (!excerptSource) {
  const raw = (post.body as string | undefined) || "";
  if (raw) {
    const cleaned = raw
      .replace(/```[\s\S]*?```/g, "")
      .replace(/[#>*`]/g, "")
      .replace(/\[(.*?)\]\((.*?)\)/g, "$1")
      .replace(/!\[(.*?)\]\((.*?)\)/g, "")
      .replace(/\n+/g, " ")
      .trim();
    excerptSource = cleaned.slice(0, 240).trim();
    if (cleaned.length > 240) excerptSource += "…";
  }
}
const description = excerptSource;

const publishDate = post.data.pubDate;
const modifiedDate = post.data.updatedDate;
---

<BaseLayout
  title={post.data.title}
  description={description}
  image={post.data.heroImage}
  author={post.data.author}
  isArticle={true}
  imageAlt={post.data.title}
  publishDate={publishDate}
  modifiedDate={modifiedDate}
  tags={post.data.tags}
>
  <article>
    <div class="hero-image">
      {
        post.data.heroImage && (
          <img
            width={1020}
            height={510}
            src={`${base}${post.data.heroImage}`}
            alt={post.data.title}
          />
        )
      }
    </div>
    <div class="prose">
      <div class="title">
        <div class="date">
          {
            post.data.pubDate.toLocaleDateString("es-ES", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </div>
        <h1>{post.data.title}</h1>
        {post.data.subtitle && <h2 class="subtitle">{post.data.subtitle}</h2>}
        <div class="meta">
          {
            post.data.author && (
              <span class="author">Por {post.data.author}</span>
            )
          }
        </div>
        <hr />
      </div>
      <Content />

      <div class="post-actions">
        <h3>Compartir:</h3>
        <a
          href={`https://x.com/intent/tweet?text=${encodedShareText}&url=${encodedShareUrl}`}
          target="_blank"
          rel="noopener noreferrer"
          class="action-btn x"
          aria-label="Compartir en X (Twitter)"
        >
          <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor"
            ><path
              d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
            ></path></svg
          >
        </a>
        <a
          href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedShareUrl}`}
          target="_blank"
          rel="noopener noreferrer"
          class="action-btn linkedin"
          aria-label="Compartir en LinkedIn"
        >
          <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor"
            ><path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path></svg
          >
        </a>
        <a
          href={`https://www.facebook.com/sharer/sharer.php?u=${encodedShareUrl}`}
          target="_blank"
          rel="noopener noreferrer"
          class="action-btn facebook"
          aria-label="Compartir en Facebook"
        >
          <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor"
            ><path
              d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
            ></path></svg
          >
        </a>
        <a
          href={`https://wa.me/?text=${encodedShareText}%20${encodedShareUrl}`}
          target="_blank"
          rel="noopener noreferrer"
          class="action-btn whatsapp"
          aria-label="Compartir en WhatsApp"
        >
          <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor"
            ><path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
            ></path></svg
          >
        </a>
      </div>

      <div class="support-section">
        <p>
          ¿Te gustó este artículo? Apoya mi trabajo y ayúdame a seguir creando
          contenido.
        </p>
        <a
          href="https://buymeacoffee.com/achirinos"
          target="_blank"
          rel="noopener noreferrer"
          class="coffee-button"
        >
          <span class="coffee-icon">☕</span>
          Cómprame un café
        </a>
      </div>

      <div class="tags">
        {
          post.data.tags.map((tag) => (
            <a href={`/tags/${tag}`} class="tag">
              #{tag}
            </a>
          ))
        }
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .hero-image {
    width: 100%;
    margin-top: 2rem;
  }
  .hero-image img {
    display: block;
    margin: 0 auto;
    width: 100%;
    height: auto;
  }
  .prose {
    max-width: 720px;
    width: 100%;
    margin: auto;
    padding: 1em 1em 2em 1em;
    color: rgb(var(--gray-dark));
  }
  .title {
    margin-bottom: 1em;
    padding: 1em 0;
    text-align: center;
    line-height: 1;
  }
  .title h1 {
    margin: 0 0 0.5em 0;
  }
  .subtitle {
    font-size: 1.5em;
    color: rgb(var(--gray));
    font-weight: normal;
  }
  .date {
    margin-bottom: 0.5em;
    color: rgb(var(--gray));
  }
  .last-updated-on {
    font-style: italic;
  }
  .post-actions {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid rgb(var(--gray-light));
    display: flex;
    gap: 1rem;
    align-items: center;
  }
  .post-actions h3 {
    margin: 0;
    font-size: 1rem;
    margin-right: 0.5rem;
  }
  .action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    color: white;
    text-decoration: none;
    transition: transform 0.2s;
  }
  .action-btn:hover {
    transform: translateY(-2px);
  }
  .action-btn.x {
    background-color: #000;
  }
  .action-btn.linkedin {
    background-color: #0077b5;
  }
  .action-btn.facebook {
    background-color: #1877f2;
  }
  .action-btn.whatsapp {
    background-color: #25d366;
  }
  .tags {
    margin-top: 2rem;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap; /* avoid horizontal overflow on many tags */
  }
  .tag {
    background: rgba(var(--gray-light), 0.6);
    padding: 0.25rem 0.65rem;
    border-radius: 6px;
    font-size: 0.85rem;
    line-height: 1.2;
    text-decoration: none;
    color: rgb(var(--gray-dark));
    border: 1px solid rgba(var(--gray), 0.25);
    transition:
      background 0.2s,
      color 0.2s;
  }
  .tag:hover {
    background: rgb(var(--accent));
    color: #fff;
  }
  .support-section {
    margin-top: 3rem;
    padding: 2rem 1.5rem;
    background: linear-gradient(
      135deg,
      rgba(var(--accent-light), 0.35) 0%,
      rgba(var(--accent-light), 0.15) 100%
    );
    border-radius: 16px;
    text-align: center;
    border: 1px solid rgba(var(--accent), 0.5);
    box-shadow: 0 4px 14px -2px rgba(var(--gray), 0.25);
  }
  .support-section p {
    margin: 0 0 1.5rem 0;
    font-size: 1.1rem;
    color: rgb(var(--gray-dark));
  }
  .coffee-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgb(var(--accent));
    color: #fff;
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition:
      background 0.25s,
      transform 0.25s,
      box-shadow 0.25s;
    box-shadow: 0 4px 8px -2px rgba(var(--accent), 0.5);
  }
  .coffee-button:hover {
    background: rgb(var(--accent-dark));
    transform: translateY(-3px);
    box-shadow: 0 6px 14px -2px rgba(var(--accent), 0.55);
  }
  .coffee-icon {
    font-size: 1.5rem;
  }

  @media (prefers-color-scheme: dark) {
    .prose {
      color: rgb(var(--black));
    }
    .support-section {
      background: linear-gradient(
        135deg,
        rgba(var(--accent-dark), 0.55) 0%,
        rgba(var(--accent-dark), 0.35) 100%
      );
      border-color: rgba(var(--accent-light), 0.4);
    }
    .support-section p {
      color: rgb(var(--black));
    }
    .tag {
      background: rgba(var(--gray-light), 0.35);
      color: rgb(var(--black));
      border-color: rgba(var(--gray), 0.3);
    }
    .tag:hover {
      background: rgb(var(--accent));
      color: #fff;
    }
  }
</style>
