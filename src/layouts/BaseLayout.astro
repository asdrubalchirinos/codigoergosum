---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
  author?: string;
  isArticle?: boolean;
  imageAlt?: string;
  publishDate?: Date | string;
  modifiedDate?: Date | string;
  tags?: string[];
  imageWidth?: number;
  imageHeight?: number;
}

const { title, description, image, author, isArticle = false, imageAlt, publishDate, modifiedDate, tags = [], imageWidth, imageHeight } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description} image={image} author={author} isArticle={isArticle} imageAlt={imageAlt} publishDate={publishDate} modifiedDate={modifiedDate} tags={tags} imageWidth={imageWidth} imageHeight={imageHeight} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

